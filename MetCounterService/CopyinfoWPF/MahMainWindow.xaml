<Controls:MetroWindow
    x:Class="CopyinfoWPF.MahMainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:UControls="clr-namespace:CopyinfoWPF.UControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CopyinfoWPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MahMainWindow"
    Width="1200"
    Height="850"
    Background="#f2f2f2"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary Source="Resources\Style.xaml" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <UControls:UcReportsView
            x:Name="Reports"
            Grid.Column="1"
            Margin="0,0,5,5" />
        <StackPanel Background="#f2f2f2">
            <Image Margin="0,0,0,20" Source="Resources\logo-met_tech.png" />
            <Button Grid.Column="0" Content="Liczniki" />
            <Button Grid.Column="0" Content="Urządzenia" />
            <Button Grid.Column="0" Content="Klienci" />
        </StackPanel>
    </Grid>
</Controls:MetroWindow>
