<Window
    x:Class="CopyinfoWPF.Views.OverviewView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UControls="clr-namespace:CopyinfoWPF.UControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CopyinfoWPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="OverviewView"
    Width="1500"
    Height="850"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="5" />
            <ColumnDefinition />
            <ColumnDefinition Width="5" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <UControls:UcClientOverview x:Name="ClientControl" Grid.Column="0" />
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" />
        <UControls:UcDeviceOverview x:Name="DeviceControl" Grid.Column="2" />
        <GridSplitter Grid.Column="3" HorizontalAlignment="Stretch" />
        <UControls:UcReportOverview x:Name="ReportControl" Grid.Column="4" />

    </Grid>
</Window>
